{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@tokens/*": ["styles/tokens/*"],
      "@tokens": ["styles/tokens/index"]
    }
  }
}

