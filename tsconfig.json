{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "apps/frontend/src",
    "paths": {
      "@tokens/*": ["styles/tokens/*"],
      "@tokens": ["styles/tokens/index"],
      "@types/*": ["types/*"],
      "@types": ["types/index"],
      "@store/*": ["../../store/*"],
      "@store": ["../../store"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],

    // ✅ Fixes “Module can only be default-imported” errors
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}

